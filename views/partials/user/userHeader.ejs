<style>
    .navbar {
        background-color: #4CAF50; /* Green background color */
        color: #fff; /* White text color */
    }

    .navbar a {
        color: #fff !important; /* Override link color to white */
    }

    .navbar a.create-account-link {
        color: #000 !important; /* Black color for "Create Account" link */
    }

    .navbar a.login-link {
        color: #000 !important; /* Black color for "Login" link */
    }

    .navbar-toggler-icon {
        background-color: #fff; /* White color for the navbar toggler icon */
    }

    .navbar-toggler {
        border-color: #fff; /* White border color for the navbar toggler */
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light" style="position: fixed; top: 0; width: 100%; z-index: 999; background-color: #4CAF50;">
    <a href="/"><img src="/user/img/logo.png" alt="Logo"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <ul class="navbar-nav">
            <% category.forEach(cat => { %>
                <li class="nav-item">
                    <a class="nav-link font-weight-bold" href="/category/<%= cat._id %>"><%= cat.categoryName %></a>
                </li>
            <% }) %>
            <a class="nav-link font-weight-bold" href="/allproducts">All PRODUCTS</a>
        </ul>
    </div>

    <% if (user) { %>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/cart">Cart</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
                <a id="logoutLink" class="nav-link" href="/logout">Logout</a>
            </li>
        </ul>
    <% } else { %>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link create-account-link" href="/register">Create Account</a>
            </li>
            &nbsp;&nbsp;&nbsp;
            <li class="nav-item">
                <a class="nav-link login-link" href="/login"><i class="fa fa-user"></i> Login</a>
            </li>
        </ul>
    <% } %>
</nav>
