<!-- user/wishlist.ejs -->

<div class="cart-wrap">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="main-heading mb-10">My Wishlist</div>
          <div class="table-wishlist">
            <table cellpadding="0" cellspacing="0" border="0" width="100%">
              <thead>
                <tr>
                  <th width="45%">Products</th>
                  <th width="15%">Unit Price</th>
                  
                  <th width="15%"></th>
                  <th width="10%"></th>
                </tr>
              </thead>
              <tbody>
                <% if (product) { %>
                   <!-- Iterate through wishlist items -->
                   <% product.items.forEach(item => { %>
                     <tr>
                       <td width="45%">
                         <div class="display-flex align-center">
                           <div class="img-item" style="margin-right: 20px;">
                            <% if (item.product && item.product.image1) { %>
                              <img src="uploads/<%= item.product.image1 %>" alt="" width="100">
                          <% } else { %>
                              <span>Image Not Available</span>
                          <% } %>

                           </div>
                           <div class="name-item">
                             <%= item.product.name %>
                           </div>
                         </div>
                       </td>
                       <td width="15%" class="price">â‚¹<%= item.product.price %>.00</td>
                       
                       <td width="15%">
                         <a href="/whishlist-to-cart/<%= item.product._id %>">
                          <button class="round-black-btn small-btn" style="background-color: green;">Add to Cart</button>

                         </a>
                       </td>
                       <td width="10%" class="text-center">
                         <a href="/delete-wishlist-item/<%= item.product._id %>" >
                          <button class="round-black-btn small-btn" style="background-color: rgb(206, 14, 14);">Delete</button>

                         </a>
                       </td>
                     </tr>
                   <% }) %>
                <% } else { %>
                   <!-- Display a message when the wishlist is empty -->
                   <tr>
                     <td colspan="5">
                       <h1>Your Wishlist is Empty</h1>
                     </td>
                   </tr>
                <% } %>
               </tbody>
               
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  