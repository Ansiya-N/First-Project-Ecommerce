<!DOCTYPE html>
<html lang="zxx">
<head>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

  <style>
    
    .pagination-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .pagination-button {
      /* Add your button styles here */
      padding: 10px;
    }
  

 


    body {
      font-family: 'Arial', sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    .container {
      width: 80%;
      margin: 30px auto 0; 
      
    }

    .search {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      margin-top: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .search-form {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      max-width: 800px; /* Adjust the width as needed */
      margin: 0 auto;
    }

    input[type="text"] {
      width: 70%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 4px;
      outline: none;
      font-size: 16px;
    }

    button {
      background-color: #4caf50;
      color: #fff;
      border: none;
      padding: 5px 10px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }

    button:hover {
      background-color: #45a049;
    }

    .options {
      margin-top: 20px;
      display: flex;
      justify-content: space-between;
    }

    .sort-options, .search-options, .filter-options {
      display: flex;
      align-items: center;
    }

    label {
      margin-right: 10px;
      font-size: 16px;
    }

    select {
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ddd;
      border-radius: 4px;
      outline: none;
    }

    /* Add more styling as needed */
  </style>
</head>
<body>

<section class="search spad">
  <div class="container">
    <div class="options">
      <div class="sort-options">
        <label for="sortOptions">Sort:</label>
        <select id="sortOptions" onchange="sortProducts()">
          <option value="name">Name</option>
          <option value="price">Price</option>
        </select>
      </div>
      <div class="search-options">
        <form action="/search" method="POST" class="search-form">
          <input type="text" name="query" placeholder="Search products..." onkeyup="sendData(this)" />
          <button type="submit"><i class="fa fa-search"></i> Search</button>
        </form>
      </div>
      <div class="filter-options">
        <label for="categoryFilter">Filter by Category:</label>
        <select id="categoryFilter" onchange="filterProducts()">
          <option value="">All</option>
          <option value="VEGETABLES">Vegetables</option>
          <option value="FRUITS">Fruits</option>
          <option value="JUICES">Juices</option>
        </select>
        <label for="priceRangeFilter">Filter by Price Range:</label>
  <select id="priceRangeFilter" onchange="filterProducts()">
    <option value="">All</option>
    <option value="0-1000">0 - 1000</option>
    <option value="1001-2000">1001 - 2000</option>
    <option value="2001-3000">2001 - 3000</option>
    <!-- Add more ranges as needed -->
  </select>
      </div>
    </div>
  </div>
</section>



<!-- Search Section End -->

    <section class="featured spad">
      <div class="container">
    
        
      
         
          <div class="row featured__filter" id="search-results">
            <% products.forEach(product=> { %>
              
                
              
                <div class="col-lg-3 col-md-4 col-sm-6 mix vegetables fresh-meat" >
                  <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="/uploads/<%= product.image1 %>">
                      <ul class="featured__item__pic__hover">
                        <li>
                          <a href="/addToCart/<%= product._id %>"><i class="fa fa-shopping-cart"></i></a>
                        </li>
                      </ul>
                    </div>
                    <div class="featured__item__text">
                      <h6><a href="/single-product/<%= product._id %>"><%= product.name %></a></h6>
                      <h5>Rs.<%= product.price %>/-</h5>
                    </div>
                  </div>
                </div>
              
            <% }); %>
          </div>
          
         
          </div>
        </div>
        <nav class="pagination-container">
          <button class="pagination-button" id="prev-button" title="Previous page" aria-label="Previous page">
            &lt;
          </button>
  
          <div id="pagination-numbers">
            <!-- You may add your pagination numbers here if needed -->
          </div>
  
          <button class="pagination-button" id="next-button" title="Next page" aria-label="Next page">
            &gt;
          </button>
        </nav>
  
      </div>
    </section>
    <!-- Featured Section End -->

   
    
      <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
  $(document).ready(function () {
    let currentPage = 1;
    const pageSize = 4; // Set your desired page size

    function fetchProducts(page) {
      $.ajax({
        method: 'post',
        url: '/pagination',
        data: {
          page: page,
          pageSize: pageSize
        },
        success: function (res) {
          const productList = document.getElementById('search-results');

          if (res && res.products.length > 0) {
            let productHTML = '';

            res.products.forEach((item) => {
              // Create a product card similar to the homepage
              productHTML += `
                <div class="col-lg-3 col-md-4 col-sm-6 g-4 pl-4">
                  <div class="card mb-4 h-100">
                    <img src="/uploads/${item.image1}" class="card-img-top img-fluid" alt="Product Image" style="height: 220px; object-fit: cover;">
                    <div class="card-body">
                      <!-- Add other product details -->
                      <h5 class="card-title">
                        <a href="/single-product/${item._id}" style="color: #000000; justify-content: center; font-weight: 700;">${item.name}</a>
                      </h5>
                      <h6 style="font-weight: 700;">Price: Rs. ${item.price}/-</h6>
                      <a href="/addToCart/${item._id}">
      
      <button type="submit" class="add-to-cart-btn" style="background-color: #4caf50; color: #fff;">
        Add to Cart <i class="fa-solid fa-cart-shopping"></i>
      </button>

    </a>

                    </div>
                  </div>
                </div>
              `;
            });

            productList.innerHTML = productHTML;
          }
        },
        error: function (error) {
          console.log(error);
        }
      });
    }

    fetchProducts(currentPage);

    // Pagination button click event handlers
    $('#prev-button').on('click', function () {
      if (currentPage > 1) {
        currentPage--;
        fetchProducts(currentPage);
      }
    });

    $('#next-button').on('click', function () {
      currentPage++;
      fetchProducts(currentPage);
    });
  });

      function sendData(e) {
        console.log('sendData function called');
        const productList = document.querySelector('#search-results');
        if (e.value.trim()) {
        let match = e.value.match(/^[a-zA-Z]*/);
        let match2 = e.value.match(/\s*/);
    
        fetch('/product-search', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ payload: e.value.trim() })
        })
          .then(res => res.json())
          .then(data => {
            console.log(data.payload);
           
            productList.innerHTML = '';
            data.payload.forEach((product, index) => {
    if (index > 0) productList.innerHTML += '';

    productList.innerHTML += `
    <div class="col-lg-3 col-md-4 col-sm-6 mix vegetables fresh-meat">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" style="background-image: url('/uploads/${product.image1}')">
                <ul class="featured__item__pic__hover">
                    <li>
                        <a href="/addToCart/${product._id}"><i class="fa fa-shopping-cart"></i></a>
                    </li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a href="/single-product/${product._id}">${product.name}</a></h6>
                <h5>Rs.${product.price}/-</h5>
            </div>
        </div>
    </div>
    `;
});

          })
          .catch(error => console.log(error.message));
      }
      else {
    console.log('Search value is undefined');
  }
}


      // Add this function to your existing script
function sortProducts() {
  console.log('sendData function called');
  const productList = document.querySelector('#search-results');
  const sortOption = document.getElementById('sortOptions').value;

  fetch(`/product-sort?sort=${sortOption}`, {
    method: 'GET',
    headers: { 'Content-Type': 'application/json' }
  })
    .then(res => res.json())
    .then(data => {
      productList.innerHTML = '';
      data.payload.forEach((product, index) => {
        if (index > 0) productList.innerHTML += '';

        productList.innerHTML += `
          <div class="col-lg-3 col-md-4 col-sm-6 mix vegetables fresh-meat">
            <div class="featured__item">
              <div class="featured__item__pic set-bg" style="background-image: url('/uploads/${product.image1}')">
                <ul class="featured__item__pic__hover">
                  <li>
                    <a href="/addToCart/${product._id}"><i class="fa fa-shopping-cart"></i></a>
                  </li>
                </ul>
              </div>
              <div class="featured__item__text">
                <h6><a href="/single-product/${product._id}">${product.name}</a></h6>
                <h5>Rs.${product.price}/-</h5>
              </div>
            </div>
          </div>
        `;
      });
    })
    .catch(error => console.log(error.message));
}

// Add this function to your existing script
function filterProducts() {
  const productList = document.querySelector('#search-results');
  const filterCategory = document.getElementById('categoryFilter').value;
  const filterPriceRange = document.getElementById('priceRangeFilter').value;

  fetch(`/product-filter?category=${filterCategory}&priceRange=${filterPriceRange}`, {
    method: 'GET',
    headers: { 'Content-Type': 'application/json' }
  })
    .then(res => res.json())
    .then(data => {
      productList.innerHTML = ''; // Clear existing content

      data.payload.forEach((product, index) => {
        const productItem = document.createElement('div');
        productItem.classList.add('col-lg-3', 'col-md-4', 'col-sm-6', 'mix', 'vegetables', 'fresh-meat');

        productItem.innerHTML = `
          <div class="featured__item">
            <div class="featured__item__pic set-bg" style="background-image: url('/uploads/${product.image1}')">
              <ul class="featured__item__pic__hover">
                <li>
                  <a href="/addToCart/${product._id}"><i class="fa fa-shopping-cart"></i></a>
                </li>
              </ul>
            </div>
            <div class="featured__item__text">
              <h6><a href="/single-product/${product._id}">${product.name}</a></h6>
              <h5>Rs.${product.price}/-</h5>
            </div>
          </div>
        `;

        productList.appendChild(productItem);
      });
    })
    .catch(error => console.log(error.message));
}

    </script>
    
