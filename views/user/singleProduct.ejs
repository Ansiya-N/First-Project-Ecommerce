<style>
  /* Reset some default styles */
body, h1, h2, h3, p, ul {
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Arial', sans-serif;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.header {
    background-color: #fff;
    border-bottom: 1px solid #ddd;
    padding: 20px 0;
}

.header__top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.header__top ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

.header__top__left li {
    display: inline-block;
    margin-right: 20px;
    font-size: 11px;
    color: #555;
}

.header__top__right__social a {
    margin-right: 10px;
    color: #555;
    font-size: 16px;
}

.header__top__right__language {
    position: relative;
    display: inline-block;
    margin-right: 20px;
}

.header__top__right__language img {
    width: 20px;
    height: auto;
    margin-right: 5px;
}

.header__top__right__language div {
    display: inline-block;
    margin-right: 5px;
    font-size: 14px;
    color: #555;
}

.header__top__right__language ul {
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #fff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    display: none;
}

.header__top__right__language:hover ul {
    display: block;
}

.header__top__right__language li {
    padding: 10px;
}

.header__top__right__auth a {
    color: #555;
    font-size: 14px;
}

.header__logo img {
    max-width: 100%;
}

.header__menu ul {
    list-style: none;
}

.header__menu ul li {
    display: inline-block;
    margin-right: 20px;
}

.header__menu ul li a {
    text-decoration: none;
    color: #555;
    font-size: 16px;
}

.header__cart ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

.header__cart ul li {
    display: inline-block;
    margin-right: 20px;
}

.header__cart__price {
    font-size: 16px;
    color: #555;
}

/* Mobile styles for the hamburger menu */
.humberger__open {
    display: none;
    cursor: pointer;
}

@media only screen and (max-width: 768px) {
    .header__top {
        flex-direction: column;
        align-items: flex-start;
    }

    .header__top__right {
        margin-top: 15px;
    }

    .header__menu {
        display: none;
        margin-top: 20px;
    }

    .humberger__open {
        display: block;
        font-size: 20px;
        color: #555;
    }
}

</style>



<div class="container" style="background-color: #fff; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); display: flex; padding-top: 20px;">
  <div class="image-container" style="width: 50%; display: flex; flex-direction: column; margin-top: 40px;">
    <div class="big-image" style="height: 70%; display: flex; justify-content: center; align-items: center;">
      <img src="/uploads/<%= product.image1 %>" alt="" id="zoom" style="max-width: 100%; max-height: 100%; object-fit: contain;">
    </div>
    <div class="small-images" style="height: 30%; display: flex; justify-content: space-around; align-items: center;">
      <div style="border: 1px solid #ddd; border-radius: 4px; overflow: hidden;">
        <img src="/uploads/<%= product.image1 %>" alt="" style="max-width: 70px; max-height: 70px; cursor: pointer; transition: transform 0.2s; width: 100%; height: 100%;">
      </div>
      <div style="border: 1px solid #ddd; border-radius: 4px; overflow: hidden;">
        <img src="/uploads/<%= product.image2 %>" alt="" style="max-width: 70px; max-height: 70px; cursor: pointer; transition: transform 0.2s; width: 100%; height: 100%;">
      </div>
      <div style="border: 1px solid #ddd; border-radius: 4px; overflow: hidden;">
        <img src="./cabinet5.1.avif" alt="" style="max-width: 70px; max-height: 70px; cursor: pointer; transition: transform 0.2s; width: 100%; height: 100%;">
      </div>
    </div>
    
  </div>
  <div class="content" style="width: 50%; padding: 20px; margin-left: 40px; margin-top: 30px;">
    <h1 style="font-size: 1.8rem; color: #333; margin-top: 20px;"><%= product.name %></h1>
    <div class="price" style="font-size: 1.5rem; color: #e44d26; margin-top: 20px;">Rs. <%= product.price %>/-</div>
    <div class="description" style="margin-top: 20px;">
      <h3 style="font-size: 1.6rem;">Product Description</h3>
      <p style="font-size: 1.2rem; color: #666;"><%= product.description %></p>
    </div>
    <div class="specifications" style="margin-top: 20px;">
      <ul style="list-style-type: none; padding: 0; margin: 0;">
        <li style="font-size: 1.4rem;">Stock: <%= product.stock %></li>
      </ul>
    </div>
    <!-- Your existing HTML code -->

<div class="buy-buttons" style="margin-top: 20px;">
  <div id="liveAlertPlaceholder"></div>
  <div class="buy-buttons" style="margin-top: 20px;">
    <div id="liveAlertPlaceholder"></div>
    
      <a href="/addToCart/<%= product._id %>">
      
        <button type="submit" class="add-to-cart-btn" style="background-color: #4caf50; color: #fff;">
          Add to Cart <i class="fa-solid fa-cart-shopping"></i>
        </button>

      </a>
      <% if (user) { %>
        <a href="/user/add-wishlist/<%= product._id %>">
          <button type="button" class=" add-to-cart-btn" onclick="wishlistAdd()"  style="background-color: #4caf50; color: #fff;">
            Add to wishlist
          </button>
        </a>
       <% }else{ %>
        <a href="/user/add-wishlist/<%= product._id %>">
          <button type="button" class=" add-to-cart-btn"  style="background-color: #4caf50; color: #fff;">
            Add to wishlist
          </button>
        </a>
        <% } %>
        
  </button> 


  </div>
</div>

