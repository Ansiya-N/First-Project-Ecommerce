<%- include('../partials/admin/adminHeader') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon Management</title>
   
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
     
     body {
            padding: 20px;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

    

    table {
     margin-top: 10px;
      width: 100%;
      background-color: #fff;
      
    }

    table, th, td {
      border: 1px solid #ddd;
    }

    th, td {
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: green;
      color: #fff;
    }
      

        .coupon-code {
            color: #308dd8;
        }

        .coupon-description {
            color: #555;
        }

        .coupon-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-edit,
        .btn-delete {
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-edit {
            background-color: #28a745;
            color: #fff;
            border: 1px solid #28a745;
        }

        .btn-delete {
            background-color: #dc3545;
            color: #fff;
            border: 1px solid #dc3545;
        }

        .btn-add-coupon {
            margin-top: 20px;
            padding: 10px 20px;
            border-radius: 5px;
            background-color: green;
            color: #fff;
            border: 1px solid #007bff;
            cursor: pointer;
        }
        .button-container {
            margin-bottom: 20px;
        }
        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

    </style>
</head>

<body>
    <% if (typeof success !== 'undefined' && success !== null) { %>
        <div class="alert alert-danger" role="alert" aria-live="assertive" aria-atomic="true" id="myToast"
        data-bs-delay="2000">
    
    
            <%= success %>
        </div>
    <% } %>
    <div class="container">
        <h1>Coupon Management</h1>
    <div class="container">
        <div class="button-container">
            <a href="/admin/add-couponPage">
                <button class="btn-add-coupon">Add Coupon</button>
            </a>
        </div>

    
        <table class="coupon-table">
            <thead>
                <tr>
                    <th>Coupon Code</th>
                    <th>Start Date</th>
                    <th>Expiration Date</th>
                    <th>Active</th>
                    <th>Discount Percentage</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% coupons.forEach(coupon => { %>
                    <tr>
                        <td class="coupon-code"><%= coupon.couponCode %></td>
                        <td><%= coupon.startDate.toLocaleDateString() %></td>
                        <td><%= coupon.expirationDate.toLocaleDateString() %></td>
                        <td><%= coupon.active %></td>
                        <td><%= coupon.discountPercentage %><span>%</span> </td>
                        <td class="coupon-actions">
                            <a href="/admin/edit-coupon/<%= coupon._id %>" class="btn-edit" >Edit</a>
                           <a href="/admin/delete-coupon/<%= coupon._id %>"   class="btn-delete" onclick="myConfirm('<%= coupon._id %>')">Delete </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    <!-- Pagination section -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link <%= i === currentPage ? 'bg-success text-white' : 'text-success' %>" href="?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </nav>
       
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- JavaScript for opening the modal -->
   
 <script>
    function myConfirm(couponId) {
        var result = confirm("Are you sure you want to delete this item?");
        if (result) {
            
            alert("Deletion successful");
            window.location.href = "/admin/delete-coupon/" + couponId + "?confirmation=true";
        } else {
            
            alert("Deletion canceled");
            window.location.href = '/admin/coupon/';
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
            const myToastElement = document.getElementById('myToast');

            const myToast = new bootstrap.Toast(myToastElement, {
                delay: 2000
            }); // Set delay to 2000ms (2 seconds)
            myToast.show();
        });
</script>
 
</body>

</html>

